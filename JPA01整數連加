import java.util.Scanner;

public class ch3 {

    static Scanner scn=new Scanner(System.in);
    public static void main(String[] args) {
        
        System.out.println("Input:");
        int a=scn.nextInt();
        int sum=0;
        for(int i=1;i<=a;i++){
            sum+=i;
        }
        System.out.printf("1 + ... + %d = %d",a,sum);
    }
}
